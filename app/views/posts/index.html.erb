<%= stylesheet_link_tag	 'masonry', media: 'all' %>

<div id="masonry-container" class="transitions-enabled centered clearfix masonry">
  <% @posts.each do |post|  %>
    <div class="box panel panel-default">
      <div class ="user-box">
        <%= post.user.user_name%>
        <small class="pull-right"><%= time_ago_in_words post.created_at%></small>
      </div>
	  <%= link_to (image_tag post.image.url), post %>

	  <div class="submit-box">
	  	<h5><%= link_to post.title, post %></h5>
	  	<span class="glyphicon glyphicon-heart"></span>
	  	<%= post.get_upvotes.size%>
	  </div>
	</div>	
  <% end %>
</div>

<%= javascript_include_tag 'posts' %>
