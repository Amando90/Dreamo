<div id="post_show" class="row">
  <div class="col-md-8 col-md-offset-2">
  	<div class="panel panel-default">
  	  <div class="panel-heading post_image">
		<%= image_tag @post.image.url %>
	  </div>
	  <div class="panel-body">
	    	    <h1><%= @post.title %></h1>
		<p><%= @post.description %></p>
	  </div>
	  <div class="panel-footer">
	  	<div class="row">
	  	  <div class="col-md-6">
	  	  	<small>Submitted by, <%= @post.user.email %></small>
	  	  </div>
	  	  <div class="col-md-6">
	  	    <div class="btn-group pull-right">
	  	      <%= link_to "Edit", edit_post_path, class: 'btn btn-default' %>
	  	      <%= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure ?" }, class: 'btn btn-default' %>
	  	    </div>
	  	  </div>
	  	</div>
	  </div>
	</div>
  </div>
</div>